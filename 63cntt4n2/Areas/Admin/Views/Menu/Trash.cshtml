@model IEnumerable<MyClass.Model.Menus>

@{
    ViewBag.Title = "Danh mục loại hàng đã xóa";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

@section header
{
    <link rel="stylesheet" href="~/Public/css/jsDatatables.css" />
}

@section footer
{
    <script src="~/Public/js/jsDatatables.js"></script>
    <script>
        let table = new DataTable('#myTable');
    </script>
}

<div class="wrapper">
    <!-- Main Sidebar Container -->
    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
        <!-- Main content -->
        <section class="content">

            <!-- Default box -->
            <div class="card">
                <div class="card-header">
                    <div class="row">
                        <div class="col-md-6">
                            <strong class="text-danger">THÙNG RÁC LOẠI SẢN PHẨM</strong>
                        </div>
                        <div class="col-md-6 text-right">
                            <a href="@Url.Action("Index","Menu")" class="btn-sm btn-primary"><i class="fa fa-long-arrow-alt-left">Quay lại</i></a>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    @*Hien thi thong bao*@
                    @Html.Partial("Message")
                    <table class="table table-bordered table-striped" id="myTable">
                        @*-----Khu vu hien thi noi dung Index*@
                        <div class="col-md-9">
                            <table class="table table-bordered table-striped" id="myTable">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>ID</th>
                                        <th>@Html.DisplayNameFor(model => model.Name)</th>
                                        <th>@Html.DisplayNameFor(model => model.Link)</th>
                                        <th>@Html.DisplayNameFor(model => model.TypeMenu)</th>
                                        <th>@Html.DisplayNameFor(model => model.Order)</th>
                                        <th>Chức năng</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td><input type="checkbox" name="checkid" value="" /></td>
                                            <td>@Html.DisplayFor(modelItem => item.Id)</td>
                                            <td>@Html.DisplayFor(modelItem => item.Name)</td>
                                            <td>@Html.DisplayFor(modelItem => item.Link)</td>
                                            <td>@Html.DisplayFor(modelItem => item.TypeMenu)</td>
                                            <td>@Html.DisplayFor(modelItem => item.Order)</td>
                                            <td>
                                                <a href="@Url.Action("Undo","Menu", new { id = item.Id })" class="btn-sm btn-success"><i class="fa fa-undo"></i></a>
                                                <a href="@Url.Action("Delete","Menu", new { id = item.Id })" class="btn-sm btn-danger"><i class="fa fa-trash"></i></a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div><!--end-col-9-->

                    </table>

                </div> <!-- /.card-footer-->
            </div><!-- /.card -->
        </section><!-- /.content -->
    </div> <!-- /.content-wrapper -->
</div><!-- ./wrapper -->    