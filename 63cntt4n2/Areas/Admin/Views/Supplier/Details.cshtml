@model MyClass.Model.Suppliers

@{
    ViewBag.Title = "Trang chủ nhà cung cấp";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

@section header {
    <link href="~/Public/css/cdn.datatables.net_1.13.6_css_jquery.dataTables.min.css" rel="stylesheet" />
}

@section footer {
    <script src="~/Public/js/cdn.datatables.net_1.13.6_js_jquery.dataTables.min.js"></script>
    <script>let table = new DataTable('#myTable');</script>
}


<div class="wrapper">
    <!-- Main Sidebar Container -->
    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
        <!-- Main content -->
        <section class="content">

            <!-- Default box -->
            <div class="card">
                <div class="card-header">
                    <div class="row">
                        <div class="col-md-6">
                            <strong class="text-danger">DANH MỤC NHÀ CUNG CẤP</strong>
                        </div>
                        <div class="col-md-6 text-right">
                            <a href="@Url.Action("Edit","Supplier")" class="btn-sm btn-success"><i class="fa fa-plus"> Sửa</i></a>
                            <a href="@Url.Action("Index","Supplier")" class="btn-sm btn-danger"><i class="fa fa-trash"> Quay lại</i></a>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    @*hien thi dong thong bao*@
                    @Html.Partial("Message")
                    <table class="table table-bordered table-striped" id="myTable">
                        <thead>
                            <tr>
                                <th>@Html.DisplayNameFor(model => model.Id)</th>
                                <th>@Html.DisplayNameFor(model => model.Name)</th>
                                <th>@Html.DisplayNameFor(model => model.Slug)</th>
                                <th>@Html.DisplayNameFor(model => model.FullName)</th>
                                <th>@Html.DisplayNameFor(model => model.Order)</th>
                                <th>@Html.DisplayNameFor(model => model.Phone)</th>
                                <th>@Html.DisplayNameFor(model => model.Email)</th>
                                <th>@Html.DisplayNameFor(model => model.Img)</th>
                                <th>Trạng thái</th>
                            </tr>
                        </thead>
                        <tbody>

                                <tr>
                                    <td>@Html.DisplayFor(model => model.Id)</td>
                                    <td>@Html.DisplayFor(model => model.Name)</td>
                                    <td>@Html.DisplayFor(model => model.Slug)</td>
                                    <td>@Html.DisplayFor(model => model.FullName)</td>
                                    <td>@Html.DisplayFor(model => model.Order)</td>
                                    <td>@Html.DisplayFor(model => model.Phone)</td>
                                    <td>@Html.DisplayFor(model => model.Email)</td>
                                    <td><img src="~/Public/img/supplier/@Model.Img" alt="Img" class="img-fluid" /></td>
                                    <td>
                                        @if (@Model.Status == 1)
                                        {
                                            <i class="fa fa-toggle-on"></i>
                                        }
                                        else
                                            {
                                            <<i class="fa fa-toggle-off"></i>
                                        }
                                    </td>
                                </tr>
                        </tbody>

                    </table>

                </div> <!-- /.card-footer-->
            </div><!-- /.card -->
        </section><!-- /.content -->
    </div> <!-- /.content-wrapper -->
</div><!-- ./wrapper -->