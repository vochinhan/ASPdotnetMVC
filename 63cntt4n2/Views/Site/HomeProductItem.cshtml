@model MyClass.Model.Products

    <div class="card text-center card-product">
        <div class="card-product__img">
            <img class="card-img" src="~/Public/img/product/@Model.Img" alt="">
            <ul class="card-product__imgOverlay">
                <li><button><i class="ti-search"></i></button></li>
                <li><button><i class="ti-shopping-cart"></i></button></li>
                <li><button><i class="ti-heart"></i></button></li>
            </ul>
        </div>
        <div class="card-body">
            <p>@ViewBag.CatName</p>
            <h4 class="card-product__title"><a href="@Url.Action("ProductDetails", "Site", new {id = Model.Id})">@Model.Name</a></h4>
            <p class="card-product__price">$ @Model.PriceSale</p>
        </div>
    </div>